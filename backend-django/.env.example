# ============================================
# Django 和安全配置
# ============================================
# Django 密钥 - 生产环境必须设置一个强随机字符串
# 可使用: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production

# JWT 认证密钥 - 生产环境必须设置强随机字符串
# 可使用: python -c "import secrets; print(secrets.token_hex(32))"
JWT_ACCESS_SECRET_KEY=your-jwt-access-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key-change-in-production

# Token 过期时间配置（分钟）
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60  # Access token 有效期（默认1小时）
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080  # Refresh token 有效期（默认7天）

# ============================================
# 数据库配置
# ============================================
DATABASE_TYPE=POSTGRESQL  # MYSQL/SQLSERVER/SQLITE3/POSTGRESQL
DATABASE_HOST=your-db-host
DATABASE_PORT=5432
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-db-password
DATABASE_NAME=fuadmin-v5

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# ============================================
# 邮箱配置（用于登录通知等）
# ============================================
EMAIL_HOST=smtp.163.com
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=your-email@163.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# 其他配置
# ============================================
# 演示环境标志（生产环境设为 False）
IS_DEMO=False

# 主机地址
HOST=http://localhost:8000/
